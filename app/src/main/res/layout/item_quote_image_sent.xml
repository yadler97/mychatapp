<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/message_padding_top"
    android:paddingBottom="@dimen/message_padding_bottom">

    <LinearLayout
        android:id="@+id/quotebox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="240dp"
        android:padding="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <LinearLayout
            android:id="@+id/quotebox_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/quote_name"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="208dp"
                android:textColor="@color/black"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="232dp"
                app:cardCornerRadius="10dp" >

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="232dp"
                    android:layout_height="174dp" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <TextView
            android:id="@+id/text_message_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxWidth="232dp"
            android:autoLink="all"
            android:textColorLink="@color/white"
            android:textColor="@color/white"
            android:padding="4dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/text_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/message_time_text_size"
        android:layout_marginRight="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/quotebox"
        app:layout_constraintRight_toLeftOf="@+id/quotebox" />

</androidx.constraintlayout.widget.ConstraintLayout>