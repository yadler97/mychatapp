<resources>

    <attr name="iconColor" format="reference|color" />

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/red</item>
        <item name="colorAccent">@color/red</item>
        <item name="colorButtonNormal">@color/red</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="iconColor">@color/iconGrey</item>
        <item name="colorTextChangelog">@color/standardTextColor</item>
        <item name="colorDivider">@color/divider</item>
        <item name="colorTabSelected">@color/white</item>

        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppThemeChat" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/darkRed</item>
        <item name="colorAccent">@color/red</item>
        <item name="colorButtonNormal">@color/red</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorDivider">@color/divider</item>
        <item name="iconColor">@color/iconGrey</item>
    </style>

    <style name="Dark" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/dark_actionbar</item>
        <item name="colorPrimaryDark">@color/dark_actionbar</item>
        <item name="colorAccent">@color/dark_button</item>
        <item name="colorButtonNormal">@color/dark_button</item>
        <item name="android:colorBackground">@color/dark_background</item>
        <item name="android:itemBackground">@color/dark_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorTertiary">@color/white</item>
        <item name="iconColor">@color/white</item>
        <item name="android:navigationBarColor">@color/dark_top</item>
        <item name="colorTextChangelog">@color/white</item>
        <item name="colorDivider">@color/dark_divider</item>
        <item name="colorTabSelected">@color/dark_button</item>
        <item name="android:listDivider"> @color/dark_divider </item>

        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="DarkChat" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/dark_actionbar</item>
        <item name="colorPrimaryDark">@color/dark_top</item>
        <item name="colorAccent">@color/dark_button</item>
        <item name="colorButtonNormal">@color/dark_button</item>
        <item name="android:colorBackground">@color/dark_background</item>
        <item name="android:itemBackground">@color/dark_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorTertiary">@color/white</item>
        <item name="colorDivider">@color/dark_divider</item>
        <item name="iconColor">@color/white</item>
        <item name="android:navigationBarColor">@color/dark_top</item>
    </style>

    <style name="Splash" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:colorBackground">@color/logo_background</item>
        <item name="android:statusBarColor">@color/logo_background</item>
        <item name="colorAccent">@color/red</item>
        <item name="colorButtonNormal">@color/red</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowTranslucentStatus">false</item>

        <item name="splashIcon">@drawable/ic_splash</item>
    </style>

    <style name="SplashDark" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:colorBackground">@color/dark_background</item>
        <item name="android:statusBarColor">@color/dark_background</item>
        <item name="android:navigationBarColor">@color/dark_top</item>
        <item name="colorAccent">@color/dark_button</item>
        <item name="colorButtonNormal">@color/dark_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorTertiary">@color/white</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowTranslucentStatus">false</item>

        <item name="splashIcon">@drawable/ic_splash_dark</item>
    </style>

    <style name="DarkDialog" parent="@android:style/Widget.DeviceDefault.DatePicker">
        <item name="android:textColor">@color/white</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorAccent">@color/dark_background</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="AlertDialogDark" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/dark_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorAccent">@color/dark_background</item>
        <item name="iconColor">@color/white</item>
        <item name="android:indeterminateTint">@color/dark_button</item>
    </style>

    <style name="AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:colorBackground">@color/white</item>
        <item name="iconColor">@color/iconGrey</item>
        <item name="colorAccent">@color/white</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialogButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialogButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/AlertDialogButtonStyle</item>
    </style>

    <style name="AlertDialogButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="SheetDialogDark" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:backgroundTint">@color/dark_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconColor">@color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FullScreenImage" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="FullScreenImageDark" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="android:navigationBarColor">@color/dark_top</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
